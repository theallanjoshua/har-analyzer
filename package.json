		"@vitejs/plugin-react": "^4.6.0",
		"concurrently": "^9.2.0",
		"sass": "^1.89.2",
		"typescript": "~5.8.3",
		"vite": "^7.0.4",
		"vite-plugin-dts": "^4.5.4",
		"vite-plugin-gh-pages": "^1.0.1",
		"vite-plugin-lib-inject-css": "^2.2.2",
		"vite-tsconfig-paths": "^5.1.4"
	}
